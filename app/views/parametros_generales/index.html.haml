      %tr
        %th
          Acción
        %th
          SI
        %th
          NO
    %tbody
      / %tr
      /   %td
      /     ¿Abrir la Preinscripción?
      /   %td
      /     -#if @preinscripcion_general == "SI"
      /       =#radio_button_tag "preinscripcion_general","SI",true
      /     -#else
      /       =#radio_button_tag "preinscripcion_general","SI",false
