        %td
          ¿Abrir la Preinscripción?
        %td
          -if @inscripcion_general == "SI"
            =radio_button_tag "inscripcion_general","SI",true
          -else
            =radio_button_tag "inscripcion_general","SI",false
        %td
          -if @inscripcion_general == "NO"
            =radio_button_tag "inscripcion_general","NO",true
          -else
            =radio_button_tag "inscripcion_general","NO",false


  %p= submit_tag 'Guardar', :class => "btn btn-primary"

