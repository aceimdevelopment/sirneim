= render :partial => 'cal_usuario/datos_modal'

.tabbable.tabs-left
	%ul.nav.nav-pills
		- @departamentos.each_with_index do |dep,i|
			-activa = (i.eql? 0) ? "" : ""
			%li{:class => activa}
				= link_to dep.descripcion, "#dep_#{dep.id}", "data-toggle"=> "tab"

	.tab-content
		- @departamentos.each_with_index do |dep,i|
			-activa = (i.eql? 0) ? "" : ""
			.tab-pane{:class => activa, :id => "dep_#{dep.id}"}

				- @catedras = dep.cal_departamentos_categorias.sort_by{|cate| cate.orden}
				.tabbable.tabs-left
					%ul.nav.nav-pills
						- @catedras.each_with_index do |cat_dep,j|
							- cat = cat_dep.cal_categoria
							-cat_activa = (j.eql? 0) ? "" : ""
							%li{:class => cat_activa}
								= link_to cat.descripcion, "#cat_#{cat.id}", "data-toggle"=> "tab"

					.tab-content
						- @catedras.each_with_index do |cat_dep,j|
							- cat = cat_dep.cal_categoria						
							-cat_activa = (j.eql? 0) ? "" : ""
							.tab-pane{:class => cat_activa, :id => "cat_#{cat.id}"}

								- @materias = cat.cal_materias.where(:cal_departamento_id => dep.id)
								.tabbable.tabs-top
									%ul.nav.nav-pills

										- @materias.each_with_index do |mat,k|
											-mat_activa = (k.eql? 0) ? "" : ""
											%li{:class => mat_activa}
												= link_to mat.descripcion, "#mat_#{mat.id}", "data-toggle"=> "tab"

									.tab-content

										- @materias.each_with_index do |mat,k|
											-mat_activa = (k.eql? 0) ? "" : ""
											.tab-pane{:class => mat_activa, :id => "mat_#{mat.id}"}


												%h3= mat.descripcion[0..20]
												.well.well-small
													%table.table.table-bordered.table-striped.table-condensed.table-hover
														%thead
															%tr
																%th Secci√≥n
																%th Profesor
																%th Estado
																- if @admin and @admin.cal_tipo_admin_id <=2
																	%th Opciones
														%tbody
															- mat.cal_secciones.each do |seccion|
																%tr
																	%td= seccion.numero
																	%td= "#{seccion.cal_profesor.cal_usuario.descripcion}" if seccion.cal_profesor
																	%td
																		-if seccion.calificada
																			%span.label.label-success Calidicada 
																		- else
																			%span.label.label-info Pendiente por calificar

																	- if @admin and @admin.cal_tipo_admin_id <=2
																		%td

																			= link_to "Cambiar Profesor calificador", :action => 'seleccionar_profesor', :id => seccion.id
																			|
																			= link_to "Ver Detalle y Calificar", :action => 'ver_seccion_admin', :id => seccion.id



