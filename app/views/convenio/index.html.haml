    -@precios.each do |h|
      -if h.id != "REG"
        -estilo = ""
      -else
        -estilo = "background-color: #4682B4; color: #FFFFFF; font-weight: bold"

      %tr
        %td{:style => "#{estilo}"}
          =h.id
        %td{:style => "#{estilo}"}
          =h.descripcion
        %td{:style => "#{estilo}"}
          ="#{h.descuento}%"
        %td{:style => "#{estilo}"}
          -if h.id != "EXO"
            =h.monto - @precio_planilla
          -else
            =h.monto
        %td{:style => "#{estilo}"}
          =h.monto 
        %td{:style => "#{estilo}"}
          =link_to_modal "Actualizar",{:action => "modificar",:title =>"Modificar Monto",:width=>600, :params => {:id => "#{h.id}"}}
