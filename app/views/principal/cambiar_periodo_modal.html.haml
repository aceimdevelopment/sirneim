=form_tag url_for(:action => "cambiar_periodo", :controller => "principal") do
  %h4 Seleccione un Periodo
  Periodos:
  =collection_select :periodo,:id,@periodos,:id,:id, :selected => session[:parametros][:periodo_actual]
  %br
  =submit_tag :Aceptar
  =hidden_field_tag :controlador, @controlador
  =hidden_field_tag :accion, @accion
  =button_to_function "Cancelar","aceim.cerrar_modal();"