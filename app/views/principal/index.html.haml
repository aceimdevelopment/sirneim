%h6
	%b Estudiante:
	= @estudiante.usuario.descripcion

%h6= "Cohorte Actual: #{@cohorte_actual.descripcion}"

%table.table.table-striped.table-hover.table-condensed.table-bordered
	%thead
		%table-bordered
			%th Diplomado
			%th Estado
	-@diplomados_ofertados.each do |oferta|
		%tdody
			%tr
				%td= oferta.diplomado.descripcion_completa
				-if inscripcion = @inscripciones.where(:diplomado_id => oferta.diplomado_id, :cohorte_id => oferta.cohorte_id).limit(1).first
					%td
						%span.label.label-inverse
							= inscripcion.tipo_estado_inscripcion.nombre
				-else
					%td= link_to "Preinscribir #{oferta.diplomado.id}", {:action => "paso0", :controller => "inscripcion", :ci => @estudiante.usuario_ci, :diplomado => oferta.diplomado_id}, :class => "btn btn-primary btn-mini"

-if false and ParametroGeneral.preinscripcion_abierta
	%h3
		=link_to "Preinscribir Diplomados", :action => "cursos", :controller => "estudiante"
-if false and ParametroGeneral.inscripcion_abierta
	-@inscripciones.each do |inscripcion|
		%h3
			=link_to "Inscribir Diplomados: #{inscripcion.diplomado_id}", :action => "cursos", :controller => "estudiante"