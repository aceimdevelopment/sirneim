= form_for(@tipo_plan,url:{action: @accion}) do |f|
  - if @tipo_plan.errors.any?
    #error_explanation
      %h2
        = pluralize(@tipo_plan.errors.count, "error")
        impiden que el plan sea guardado:
      %ul
        - @tipo_plan.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :id
    %br/
    = f.text_field :id, placeholder: 'G270', autofocus: true
  .field
    = f.label :descripcion
    %br/
    = f.text_field :descripcion, placeholder: 'Descripci√≥n'
  .actions
    = f.submit class: 'btn btn-primary'
