-@accion = "registrar_guardar" if @accion.blank? 
=form_tag @accion, :class => "form-horizontal" do 
  -if @usuario.errors.any?
    %ul
      -flash[:alert] = ""
      -@usuario.errors.full_messages.each do |msg|
        -flash[:alert] += "#{msg}\n"

  %fieldset
    %legend Datos Personales
    .control-group
      %label.control-label
        Cédula de Identidad:  
      .controls  
        =text_field :usuario, :ci, :autofocus => "true", :placeholder => "Identificación…", :required => true, :class => "input-medium"
        %span.help-block
          Ejemplo: 12345678

    .control-group
      %label.control-label
        Nombres:
      .controls
        =text_field :usuario, :nombres, :placeholder => "Nombre…", :required => true
        %span.help-block
          Ejemplo: María

    .control-group
      %label.control-label
        Apellidos:
      .controls
        =text_field :usuario, :apellidos, :placeholder => "Apellido…", :required => true
        %span.help-block
          Ejemplo: Torres

    .control-group
      %label.control-label
        Lugar de nacimiento:
      .controls
        =text_field :usuario, :lugar_nacimiento, :placeholder => "Lugar de Nacimiento…", :required => true
        %span.help-block
          Ejemplo: Caracas

    .control-group
      %label.control-label
        Fecha de nacimiento:
      .controls
        =date_select :usuario, :fecha_nacimiento, {:start_year => 1940, :required => true, :prompt => { :day => 'dia', :month => 'mes', :year => 'año' }}, {:class => 'span1'}

    .control-group
      %label.control-label
        Sexo:
      .controls
        %label.checkbox
          =radio_button :usuario, :tipo_sexo_id, "M", :required => true
          Masculino
          |
          =radio_button :usuario, :tipo_sexo_id, "F", :required => true
          Femenino


  %fieldset
    %legend Datos de Contacto

    .control-group
      %label.control-label
        Teléfono habitación:
      .controls
        =telephone_field :usuario, :telefono_habitacion, :placeholder => "Teléfono de Habitación…"
        %span.help-block
          Ejemplo: 0212-5551122

    .control-group
      %label.control-label
        Teléfono celular:
      .controls
        =telephone_field :usuario, :telefono_movil, :placeholder => "Celular…", :required => true
        %span.help-block
          Ejemplo: 0414-2391212

    .control-group
      %label.control-label
        Correo electrónico:
      .controls
        =text_field :usuario, :correo, :placeholder => "Correo Electrónico…", :required => true
        %span.help-block
          Ejemplo: maria@gmail.com

    .control-group
      %label.control-label
        Correo electrónico (alternativo):
      .controls
        =text_field :usuario, :correo_alternativo, :placeholder => "Correo Alternativo…", :required => true
        %span.help-block
          Ejemplo: maria2@gmail.com

    - if controller_name.eql? "inicio"
      .control-group
        %label.control-label
          Cuenta twitter:
        .controls
          =text_field :estudiante, :cuenta_twitter, :placeholder => "Twitter…"
          %span.help-block
            Ejemplo: @maria2

    .control-group
      %label.control-label
        Dirección de domicilio:
      .controls
        =text_area :usuario, :direccion, :size => "60x4", :placeholder => "Domicilio…", :required => true
        %span.help-block
          Ejemplo: Avenida A, con calle B. Los Naranjos.
    - unless @accion.blank?
      - @submit = "Siguiente"
    - else
      - @submit = "Registrar"
    =submit_tag @submit, :class => "btn btn-primary" #, :confirm => "¿Está seguro de enviar los datos?"
%br/    