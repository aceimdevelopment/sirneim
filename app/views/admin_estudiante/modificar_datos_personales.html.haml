=form_for(@usuario,:url=>{:action => "modificar_datos_personales_guardar"}) do |f|
  -if @usuario.errors.any?
    %div#error_explanation
      %ul
        -@usuario.errors.full_messages.each do |msg|
          %li
            *
            =msg
  %fieldset
    %legend Datos Personales
    %p
      %label
        Cédula de Identidad
      =@usuario.ci
      =f.hidden_field :ci
    %p
      %label 
        Nombres
        %span.req *
      =f.text_field :nombres, :autofocus => "true" 
    %p
      %label
        Apellidos
        %span.req *
      =f.text_field :apellidos
    %p
      %label
        Sexo
        %span.req *
      =f.radio_button :tipo_sexo_id, "F"
      Femenino  
      %br/
      =f.radio_button :tipo_sexo_id, "M"
      Masculino    
    %p
      %label
        Fecha de Nacimiento
        %span.req *
      =f.text_field :fecha_nacimiento, :class=>"datepicker_nac"
      Ejemplo: 1990-03-21
  %fieldset
    %legend Datos de Contacto
    %p
      %label
        Correo Electrónico  
        %span.req *
      =f.text_field :correo
      Ejemplo: pedroperez@gmail.com
    %p
      %label
        Teléfono Móvil
        %span.req *
      =f.text_field :telefono_movil
      Ejemplo: 04261234567
    %p
      %label
        Teléfono de Habitación
      =f.text_field :telefono_habitacion
      Ejemplo: 02121234567
    %p
      %label
        Dirección de Habitación
      =f.text_area :direccion, :size => "60x4"
      Ejemplo: La Candelaria. Edificio A, Piso 1, Apto 11.
  %p 
    %span.req *  
    Campos Obligatorios
  %p
    =f.submit "Actualizar"
%br/
%br/
=link_to "<Atrás", :action => "opciones_menu"