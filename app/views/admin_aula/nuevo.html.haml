=form_for(@aula,:url=>{:action => "nuevo_guardar"}) do |a|
  -if @aula.errors.any?
    %div#error_explanation
      %ul
        -@aula.errors.full_messages.each do |msg|
          %li
            *
            =msg
            
  %fieldset
    %legend Registro de Nueva Aula
    %p
      %label
        Ubicación
        %span.req *
      =a.collection_select :tipo_ubicacion_id, TipoUbicacion.where(["id NOT IN (?) ", ["CER", "nul", "N/A", "TOR"] ]), :id, :desc

    %p
      %label
        Número del Aula
        %span.req *
      =a.text_field :id, :autofocus => "true"  
      Ejemplo: 404    
    %p
      %label 
        Descripción
        %span.req *
      =a.text_field :descripcion
      Ejemplo: Escuela Básica / Faces Piso x / Ciencias
  %p 
    %span.req *  
    Campos Obligatorios
  %p
    =a.submit "Registrar"
%br/
%br/
=link_to "<Atrás", :action => "index"
