
=form_for(@tema,:url=>{:action => "crear"}) do |a|
  -if @tema.errors.any?
    %div#error_explanation
      %ul
        -@tema.errors.full_messages.each do |msg|
          %li
            *
            =msg
            
  %fieldset
    %legend 
      ="Registro de Nuevo Tema para Diplomado #{@tema.modulo.descripcion_diplomado}" 
    %p
      
      %b Diplomado:
      =@tema.modulo.diplomado.descripcion_completa
      =a.hidden_field :diplomado_id
      =a.hidden_field :modulo_numero
      %br
      %br
      %b Modulo:
      =@tema.modulo.descripcion_completa
      %br
      %br
      %label
        Número de Identificación:
        =a.select :numero, options_for_select((1..10)to_a), {:include_blank => '--'}
        %span.req *  
    %p
      %label 
        Descripción:
        =a.text_field :descripcion
  %p 
    %span.req *  
    Campos Obligatorios
  %p
    =a.submit "Registrar"
%br/
%br/
=link_to "<Atrás", :controller => "diplomado", :action => "index"