=form_for(@modulo,:url=>{:action => "crear"}) do |a|
  -if @modulo.errors.any?
    %div#error_explanation
      %ul
        -@modulo.errors.full_messages.each do |msg|
          %li
            *
            =msg
            
  %fieldset
    %legend 
      ="Registro de Nuevo Modulo para Diplomado #{@modulo.diplomado.descripcion_completa}" 
    %p
      
      %b
        Diplomado:
      =@modulo.diplomado.descripcion_completa
      =a.hidden_field :diplomado_id
      %br
      %br
      %label
        Número de Identificación:
        =a.select :numero, options_for_select((1..10)), {:include_blank => '--'}
        %span.req *  
    %p
      %label 
        Descripción:
        =a.text_field :descripcion
  %p 
    %span.req *  
    Campos Obligatorios
  %p
    =a.submit "Registrar"
%br/
%br/
=link_to "<Atrás", :controller => "diplomado", :action => "index"