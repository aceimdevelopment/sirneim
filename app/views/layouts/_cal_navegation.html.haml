.navbar.navbar-fluid.navbar-static-top{role:"navigation"}
  .navbar-inner
    .container-fluid
      %ul.nav
        -if session[:cal_administrador]
          -if session[:cal_administrador].cal_tipo_admin_id <=4 
            %li
              %form.navbar-form.pull-left{action: '/sirneim/cal_usuario/index', role: :search} 
                = text_field_tag :search, params[:search],{class: 'span2', placeholder: 'Usuario', required: true}
                = submit_tag 'Buscar', class: 'btn btn-primary'
            %li{style: 'margin-left:20px;'}
              = link_to "Inicio", {controller: 'cal_principal_admin', action: 'index'}, class: 'brand' 
            
          -if session[:cal_administrador].cal_tipo_admin_id <=3 
            = drop_down "Usuarios" do
              %li=link_to 'Registrar Profesor', {controller: 'cal_profesor', action: 'nuevo'}
              %li=link_to 'Registrar Estudiante', {controller: 'cal_estudiante', action: 'nuevo'}
              %li=#link_to "Gestionar Profesores y Estudiantes", {controller: 'cal_principal_admin', action: 'usuarios'}
            %li
              = link_to "Configuración General", {controller: 'cal_principal_admin', action: 'configuracion_general'} 

            %li
              = link_to "Asignaturas", {controller: 'cal_materia', action: 'index'} 

            %li
              = link_to "Nuevos", {controller: 'cal_semestre', action: 'lista'}

      .nav.pull-right

        -if session[:cal_usuario]
          = drop_down "#{session[:cal_usuario].nombre_completo}" do
            %li=# link_to "Cambiar Contraseña", controller:"usuario", action:"contrasena", :controlador=>controller_name, :accion=>action_name 


            %li
              = link_to "Actualizar Datos Personales", {controller: 'cal_usuario', action: 'editar', :controlador => controller_name, :accion => action_name}
                
            = drop_down_divider
            %li
              = link_to "Cerrar Sesión", {controller: 'cal_inicio', action: 'cerrar_sesion'}
        -if session[:cal_parametros] and session[:cal_parametros][:semestre_actual] and session[:cal_administrador]
          %li= link_to "Período Académico: #{session[:cal_parametros][:semestre_actual]}", nil

