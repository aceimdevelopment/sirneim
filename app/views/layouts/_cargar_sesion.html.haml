
=form_tag({:action => "validar"}, :class => "form-inline small", :style=> "margin:10px 0") do
	=link_to "¿Olvidó su clave?", {:action => "olvido_clave"}, :class=> "btn btn-mini"
	=text_field :usuario, :cedula, :size => 10, :autofocus => "true", :placeholder => "Cédula", :class => "input input-small"
	.input-append  
		=password_field :usuario, :clave, :placeholder => "Contraseña", :class => "input input-small span2", :id => "appendedInputButtons"
		=submit_tag "Ingresar", :class => 'btn'