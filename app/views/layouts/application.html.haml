!!!
%html
  %head
    %title ACEIM - DIPLOMADOS - Escuela de Idiomas Modernos  
    =stylesheet_link_tag  "application"
    =javascript_include_tag "application"
    =javascript_include_tag controller_name
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js"></script>
    <script type="text/javascript" src="/resource/1358914798000/bootstrap/bootstrap/js/bootstrap.js"></script>

    <link href="/aceim_diplomados/assets/application.css" media="screen" rel="stylesheet" type="text/css">
    <script src="/aceim_diplomados/assets/application.js" type="text/javascript"></script>
    =javascript_include_tag "/aceim_diplomados/assets/#{controller_name}"
    
    :javascript
      $(document).ready(function() {
        $("button").button();
      }); 

  %body
    = render 'layouts/banner' 
    = render 'layouts/navegacion'
    .contenedor
      .detalle_derecha
        -if session[:rol] == "Administrador"
          #cambio_cohorte
            ="Cohorte #{session[:parametros][:cohorte_actual]}" 
            = link_to "Cambiar Cohorte", :controller => "parametros_generales", :action => "cambiar_cohorte"
            =#link_to_modal "Cambiar",{:title => "Cambio de Periodo",:controller => "principal", :action => "cambiar_periodo_modal", :params => {:controlador => controller_name,:accion => action_name},:width=>300}
      = render 'layouts/titulo'
      = render 'layouts/mensaje'
      =yield
      -if (controller_name != "principal" || action_name != "index") && (controller_name != "principal_admin" || action_name != "index") && (controller_name != "principal_instructor" || action_name != "index") && (controller_name != "reportes") && (controller_name != "planificacion") && (controller_name != "convenio") && (controller_name != "admin_seccion") && (controller_name != "gestionar_cartelera") && (action_name != "ingresar_horario_disponible_instructores") && (controller_name != "parametros_generales")
        %p 
          =#link_to "<< Regresar a principal", :controller => "principal", :action => "principal"

  = render 'layouts/pie'
    
