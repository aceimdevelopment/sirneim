!!!
%html{:lang => "es"}
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=Edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/

    %title= content_for?(:title) ? yield(:title) : "Sirneim"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]

    =#stylesheet_link_tag "application", :media => "all"
    = stylesheet_link_tag "/assets/application", :media => "all"

    =#javascript_include_tag "application"
    =#javascript_include_tag controller_name

    =javascript_include_tag "/assets/application.js"
    =#javascript_include_tag "/assets/#{controller_name}"


  %body
    =render 'layouts/cal_banner'
    =render 'layouts/cal_navegation'
    %br
    .container-fluid
      .row-fluid
        .well.well-small{style: 'min-height: 200px; padding-top: 8px'}
          = render 'layouts/titulo'
          = bootstrap_flash
          = yield
      / /row
    =render 'layouts/pie'
