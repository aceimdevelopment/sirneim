- @aprobados_sg = Inscripcion.aprobados_actuales_diplomado_sin_grupo oferta.diplomado_id
.tab-pane{:id=>"#{oferta.diplomado_id}_aprobados", :class => active}

	-if @aprobados_sg.count > 0
		.span8.well.well-small
			%h3 Lista de Admitidos
			%table.table.table-striped.table-hover.table-condensed.table-bordered
				%thead
					%th #
					%th{:style => "width:40%;"} Nombre Completo
					%th Opciones
				%tbody{:id => "aprobados_#{oferta.diplomado_id}"}
				- @aprobados_sg.each_with_index do |aprobado,i|
					=render "aprobado", :aprobado => aprobado, :asignar => true, :i => i, :grupos => grupos
	- @aprobados = Inscripcion.inscritos_actuales_diplomado oferta.diplomado_id
	%h5
		= "Total Admitidos: #{@aprobados.count}"
	-if @aprobados.count > 0
		-for grupo in 1..grupos
			- @inscritos_grupo = @aprobados.where(:grupo => grupo)
			.well.well-small.pull.pull-right
				%h3= "Lista del grupo #{grupo}"
				%table.table.table-striped.table-hover.table-condensed.table-bordered
					%thead
						%th #
						%th Nombre Completo
						%th Opciones
					%tbody{:id => "preinscritos_#{oferta.diplomado_id}"}
					- @inscritos_grupo.each_with_index do |inscrito_grupo,i|
						=render "grupos", :inscrito_grupo => inscrito_grupo, :grupo => grupo, :i => i
