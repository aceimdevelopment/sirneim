
-if @diplomados_cohortes.count > 0
	%table.table.table-striped.table-hover.table-condensed.table-bordered
		%thead
			%tr
				%th Diplamado
				%th Opciones
		-@diplomados_cohortes.each do |diplomado_cohorte|
			%tbody
				%tr
				%td
					= link_to diplomado_cohorte.diplomado.descripcion, "/aceim_diplomados/diplomado_cohorte/editar/#{diplomado_cohorte.id}"
				%td
					= link_to "/aceim_diplomados/diplomado_cohorte/editar/#{diplomado_cohorte.id}", {:class => "btn", :data => {:toggle => "tooltip"}, "title"=>"Editar caracteristicas del diplomado en esta cohorte"} do
						%i.icon-edit
					= link_to "/aceim_diplomados/cohorte_tema/nuevo/#{diplomado_cohorte.id}", {:class => "btn", :data => {:toggle => "tooltip"}, "title"=>"Asignar fechas y docentes a temas"} do
						Asignar
						%i.icon-list-alt

-else
	%h5 No se han agregado Diplomados en este Cohorte
= link_to "diplomado_cohorte/nuevo", {:class => 'btn btn-primary'} do
	%i.icon-plus.icon-white
	Agregar Diplomados a esta Cohorte
