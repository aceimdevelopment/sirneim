-if @diplomados_cohortes.count > 0
	%ul.nav.nav-list
		%li.nav-header
			%h4= "Diplomados para la Cohorte: #{@diplomados_cohortes.first.cohorte.descripcion}"
		-@diplomados_cohortes.each do |diplomado_cohorte|
			%li  
				%p 
					= diplomado_cohorte.diplomado.descripcion_completa

					= link_to "/aceim_diplomados/cohorte_tema/nuevo/#{diplomado_cohorte.id}", {:class => "btn"} do
						Cronograma
						%i.icon-forward
					= link_to "/aceim_diplomados/diplomado_cohorte/editar/#{diplomado_cohorte.id}", {:class => "btn"} do
						Editar
						%i.icon-edit

-else
	%h5 No se han agregado Diplomados en este Cohorte
%br
= link_to "diplomado_cohorte/nuevo", {:class => 'btn btn-primary'} do
	%i.icon-plus.icon-white
	Agregar Diplomados a esta Cohorte