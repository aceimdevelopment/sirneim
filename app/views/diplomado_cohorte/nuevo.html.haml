=form_for(@diplomado_cohorte,:url=>{:action => "crear"}) do |a|
  -if @diplomado_cohorte.errors.any?
    %ul
      -flash[:alert] = ""
      -@diplomado_cohorte.errors.full_messages.each do |msg|
        -flash[:alert] += "#{msg}\n"

  %fieldset
    %p
      %label
        %b Cohorte:
      =a.text_field :cohorte_id, :class => "input", :readonly => true,  :required => true

    %p
      %label
        %b Diplomado:
      =a.collection_select :diplomado_id, Diplomado.all, :id, :descripcion,{}, {:required => true, :multiple => "multiple"}
    %p= a.submit "Registrar >", :class => "btn btn-primary"

